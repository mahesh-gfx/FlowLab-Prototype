{
  "name": "data-viz-tool",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:frontend": "npm run start --workspace=@data-viz-tool/frontend",
    "start:backend": "npm run start --workspace=@data-viz-tool/backend",
    "build": "npm run build --workspaces",
    "dev": "concurrently --names \"frontend,backend\" --prefix-colors \"blue,green\" \"npm:start:frontend\" \"npm:start:backend\""
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "lerna": "^4.0.0"
  }
}
